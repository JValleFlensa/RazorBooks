@page
@model RazorBooks.Web.Pages.Category.CreateModel
@{
}
<form method="post">
    <div class="mt-4" asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Category.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
        </div>
        <button class="btn btn-primary" style="width: 200px" type="submit">Crear Categoria</button>
        <a class="btn btn-secondary" asp-page="/Category/Index" style="width: 100px">Cancelar</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}