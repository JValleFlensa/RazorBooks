@page
@model RazorBooks.Web.Pages.Category.EditModel
@{
}

<form method="post">
    <div class="mt-4" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Category.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" max="100" min="1" />
            <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
        </div>
        <button class="btn btn-info" style="width: 200px" type="submit">Actualizar Categoria</button>
        <a class="btn btn-secondary" asp-page="/Category/Index" style="width: 100px">Cancelar</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}